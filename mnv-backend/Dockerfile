FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system mnv-backend && \
          adduser --system -G mnv-backend mnv-backend

COPY dist/mnv-backend mnv-backend/
RUN chown -R mnv-backend:mnv-backend .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix mnv-backend --omit=dev -f install

CMD [ "node", "mnv-backend" ]
